@model List<Wagenpark.Models.BoekingenModel>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-image: url('../../Content/Images/Background.png');
        background-size: cover;
    }

    .btn-danger {
    }
</style>

<body>
    <h2 style="color: white">Gastenlijst:</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" style="background-color: #fff">
        <tr style="background-color: #4b631f">
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().boekingen.gastID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().boekingen.Boekingid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().boekingen.incheckdatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().boekingen.uitcheckdatum)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div data-toggle="modal" data-target="#myModal">
                        <a>@Html.DisplayFor(modelItem => item.boekingen.gastID)</a>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.boekingen.Boekingid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.boekingen.incheckdatum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.boekingen.uitcheckdatum)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.boekingen.Boekingid }) |
                    @Html.ActionLink("Details", "Details", new { id = item.boekingen.Boekingid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.boekingen.Boekingid })
                </td>
            </tr>
        }

    </table>

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                   

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

</body>


