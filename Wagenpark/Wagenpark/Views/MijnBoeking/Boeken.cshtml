@model List<Wagenpark.Models.Lodges> 





@{
    ViewBag.Title = "Index";
}

<h2>Welke Lodge wilt u boeken?</h2>
<div class="col-sm-4">
    Copy
    <form>
        <div class="form-group">
            <label for="formGroupExampleInput">Example label</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Another label</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
        </div>
        
            
    </form>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="col-sm-8">
        <table class="table" style="background-color: #fff">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LodgeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LodgeTypeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LodgeNaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LodgeNR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bezettingsgraad)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.LodgeID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.LodgeID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.LodgeID })
                    </td>
                </tr>
            }
    </div>
    </table>


